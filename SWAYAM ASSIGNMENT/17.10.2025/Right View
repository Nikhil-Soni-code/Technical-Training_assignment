class Solution {
    int maxHeight = -1;
    private void view(TreeNode root,List<Integer> ans,int height){
        if(root==null)return;
        if(height>maxHeight){
            ans.add(root.val);
        }
        maxHeight = Math.max(height,maxHeight);
        view(root.right,ans,height+1);
        view(root.left,ans,height+1);
    }
    public List<Integer> rightSideView(TreeNode root) {
        List<Integer> ans = new ArrayList();
        view(root,ans,0);
        return ans;
    }
}
